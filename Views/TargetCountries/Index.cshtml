@model IEnumerable<TargetCountry>

@{
    Layout = "_Dashboard";
}

<div class="container mt-4">
   @*  <h1 class="text-center mb-4" style="color: #2ecc71;">Target Countries</h1> *@

    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary" style="background-color: #2ecc71; border-color: #2ecc71;">Create New</a>
    </p>

    <table class="table table-striped table-hover" style="background-color: white; border-radius: 10px; overflow: hidden;">
        <thead>
            <tr style="background-color: #2ecc71; color: white;">
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var targetCountry in Model)
            {
                <tr>
                    <td>@targetCountry.Name</td>
                    <td>@targetCountry.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@targetCountry.Id" class="btn btn-warning" style="background-color: #2ecc71; border-color: #2ecc71;">Edit</a>
                        <a asp-action="Delete" asp-route-id="@targetCountry.Id" class="btn btn-danger" style="background-color: #dc3545; border-color: #dc3545;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom Green Theme for Table */
    .table {
        border-collapse: separate;
        border-spacing: 0 10px; /* Adds space between rows */
        width: 100%;
    }

        .table thead th {
            background-color: #2ecc71; /* Green header background */
            color: white; /* White text for headers */
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr {
            background-color: #f8f9fa; /* Light gray background for rows */
            transition: background-color 0.3s ease; /* Smooth hover effect */
            border-radius: 10px; /* Rounded corners for rows */
            overflow: hidden;
        }

            .table tbody tr:hover {
                background-color: #d1f9e1; /* Light green background on hover */
            }

        .table tbody td {
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
        }

    .btn-primary {
        background-color: #2ecc71; /* Green button */
        border-color: #2ecc71;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34;
        }

    .btn-warning {
        background-color: #2ecc71; /* Green button */
        border-color: #2ecc71;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545; /* Red button */
        border-color: #dc3545;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #bd2130;
        }
</style>