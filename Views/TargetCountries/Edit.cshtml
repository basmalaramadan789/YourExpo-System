@model TargetCountry

@{
    Layout = "_Dashboard";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #2ecc71;">Edit Target Country</h1>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="Name">Country Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #2ecc71; border-color: #2ecc71;">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #ffc107; border-color: #ffc107; color: white;">Back to List</a>
    </form>
</div>

<style>
    /* Custom Green Theme for Form */
    .form-group label {
        font-weight: bold;
        color: #2ecc71; /* Green label text */
    }

    .form-control {
        border: 1px solid #2ecc71; /* Green border for inputs */
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        margin-bottom: 15px;
    }

        .form-control:focus {
            border-color: #1abc9c; /* Darker green on focus */
            box-shadow: 0 0 5px rgba(46, 204, 113, 0.5); /* Green shadow on focus */
        }

    .btn-primary {
        background-color: #2ecc71; /* Green button */
        border-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1abc9c; /* Darker green on hover */
            border-color: #1abc9c;
        }

    .btn-secondary {
        background-color: #ffc107; /* Orange button */
        border-color: #ffc107;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #e0a800; /* Darker orange on hover */
            border-color: #e0a800;
        }

    .text-danger {
        color: #dc3545; /* Red for validation errors */
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: white;
    }

    h1 {
        color: #2ecc71; /* Green heading */
    }
</style>