<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vegetables E-commerce Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" />

</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <i class="fas fa-leaf"></i> YourExpo
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Supplier/Index"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CreateProduct", "Supplier")">
                        <i class="fas fa-carrot"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Supplier/SupplierOrders"><i class="fas fa-shopping-cart"></i> Orders</a>
                </li>
                @* @* <li class="nav-item">
                    <a class="nav-link" href="#settings"><i class="fas fa-cog"></i> Settings</a>
                </li> *@ 
                <li class="nav-item">
                    <a class="nav-link" href="/Supplier/Profile"><i class="fas fa-user"></i> Profile</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">
                <h1><i class="fas fa-tachometer-alt"></i> Supplier Dashboard</h1>
                <div class="header-right">
                    <div class="user-profile">
                        <img src="https://via.placeholder.com/40" alt="User">
                        <div class="profile-dropdown">
                            <a href="#profile">Profile</a>
                            <a href="#settings">Settings</a>
                            <a href="#logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            
                @RenderBody()
            

               
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
   
    <!-- Custom JS -->
    <script src="~/js/DashBoard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>