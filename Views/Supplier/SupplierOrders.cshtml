@model IEnumerable<Order>
@{
    Layout = "_SupplierDashboard";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #e0e0e0;
    }

    th {
        background-color: #2ecc71;
        color: white;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #d4edda;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        ul li {
            margin: 5px 0;
        }

    .total-amount {
        font-weight: bold;
    }

    .status {
        font-weight: bold;
        color: #27ae60;
    }

    .order-date {
        color: #7f8c8d;
    }
</style>

<div class="container">
    <table>
        <thead>
            <tr>
                <th>Customer</th>
                <th>Shipping Address</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.ApplicationUser.FullName</td>
                    <td>@order.ShippingAddress</td>
                    <td class="total-amount">@order.TotalAmount.ToString("C")</td>
                    <td class="status">@order.Status</td>
                    <td class="order-date">@order.OrderDate.ToString("g")</td>
                    <td>
                        <ul>
                            @foreach (var item in order.OrderItems)
                            {
                                <li>@item.Product.Name - @item.Quantity x @item.Price.ToString("C")</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>