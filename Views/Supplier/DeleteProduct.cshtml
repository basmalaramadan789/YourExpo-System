@model Product

@{
    Layout = "_SupplierDashboard";
}

<h1>Delete Product</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this product?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p>
            <strong>Target Countries:</strong>
            @foreach (var targetCountry in Model.ProductTargetCountries)
            {
                <span>@targetCountry.TargetCountry.Name</span>
            }
        </p>
       @*  <p><strong>Image:</strong> <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100px;" /></p> *@
    </div>
</div>

<form asp-action="DeleteProduct" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Delete Product</button>
        <a href="@Url.Action("GetSupplierProduct", "Supplier")" class="btn btn-secondary">Cancel</a>
    </div>
</form>