@model YourExpo.Models.Order

<h2>Order Confirmation</h2>

<p>Thank you for your order!</p>
<p>Order Number: @Model.Id</p>
<p>Shipping Address: @Model.ShippingAddress</p>
<p>Phone Number: @Model.PhoneNumber</p>
<p>Total Amount: @Model.TotalAmount.ToString("C")</p>

<h3>Order Items:</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Price * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Status: @Model.Status</p>

