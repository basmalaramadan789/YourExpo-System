@model CheckoutViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f8f0; /* Light green background */
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #ffffff;
            border: 1px solid #c8e6c9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #4caf50; /* Green header */
            color: white;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            border-bottom: none;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            width: 100%;
            margin-bottom: 0;
        }

            .table th, .table td {
                border: none;
                vertical-align: middle;
            }

            .table thead th {
                background-color: #e8f5e9; /* Light green header */
                color: #4caf50;
                font-weight: bold;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f1f8e9; /* Alternate row color */
            }

        .form-group label {
            color: #4caf50;
            font-weight: bold;
        }

        .form-control {
            border: 1px solid #c8e6c9;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .btn-primary {
            background-color: #4caf50;
            border: none;
            width: 100%;
            padding: 10px;
            font-size: 18px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #388e3c; /* Darker green on hover */
            }

        .total-amount {
            text-align: right;
            font-size: 20px;
            font-weight: bold;
            color: #4caf50;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Checkout
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Count / Kg</td>
                                        <td>@($"${item.Product.Price:0,0.00}")</td>
                                        <td>@($"${item.Product.Price * item.Count:0,0.00}")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="total-amount">
                            Total Amount: @Model.TotalAmount.ToString("C")
                        </div>
                        <form asp-action="PlaceOrder" method="post">
                            <div class="form-group">
                                <label for="ShippingAddress">Shipping Address</label>
                                <textarea class="form-control" name="ShippingAddress" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Phone Number</label>
                                <input type="text" class="form-control" name="PhoneNumber" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>