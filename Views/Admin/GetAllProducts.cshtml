@{
    Layout = "_Dashboard";
}

@model IEnumerable<dynamic>

<div class="container mt-4">
   @*  <h2 class="text-center mb-4" style="color: #2ecc71;">All Products</h2> *@

    <table class="table table-striped table-hover" style="background-color: white; border-radius: 10px; overflow: hidden;">
        <thead>
            <tr style="background-color: #2ecc71; color: white;">
@*                 <th>Product ID</th> *@
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Specifications</th>
                <th>Category</th>
                <th>Supplier</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    @* <td>@product.ProductId</td> *@
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td>@product.Specifications</td>
                    <td>@product.CategoryName</td>
                    <td>@product.SupplierName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom Green and Orange Theme */
    .table {
        border-collapse: separate;
        border-spacing: 0 10px; /* Adds space between rows */
        width: 100%;
    }

        .table thead th {
            background-color: #2ecc71; /* Green header background */
            color: white; /* White text for headers */
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr {
            background-color: #f8f9fa; /* Light gray background for rows */
            transition: background-color 0.3s ease; /* Smooth hover effect */
            border-radius: 10px; /* Rounded corners for rows */
            overflow: hidden;
        }

            .table tbody tr:hover {
                background-color: #ffc107; /* Orange background on hover */
                color: white; /* White text on hover */
            }

        .table tbody td {
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
        }

    .btn-success {
        background-color: #2ecc71; /* Green button */
        border-color: #2ecc71;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545; /* Red button */
        border-color: #dc3545;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #bd2130;
        }

    .btn-add {
        background-color: #ffc107; /* Orange button */
        border-color: #ffc107;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-add:hover {
            background-color: #e0a800; /* Darker orange on hover */
            border-color: #d39e00;
        }
</style>