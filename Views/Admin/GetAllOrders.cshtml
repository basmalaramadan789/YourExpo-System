@model IEnumerable<dynamic>

@{
    Layout = "_Dashboard";
}

<div class="container mt-4">
   

    <table class="table table-striped table-hover" style="background-color: white; border-radius: 10px; overflow: hidden;">
        <thead>
            <tr style="background-color: #2ecc71; color: white;">
                <th>User</th>
                <th>Shipping Address</th>
                <th>Phone Number</th>
                <th>Total Amount</th>
                <th>Payment Method</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.UserName</td>
                    <td>@order.ShippingAddress</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Status</td>
                    <td>
                        <ul style="list-style: none; padding: 0;">
                            @foreach (var item in order.Items)
                            {
                                <li>@item.ProductName - @item.Quantity x @item.Price</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom Green and Orange Theme */
    .table {
        border-collapse: separate;
        border-spacing: 0 10px; /* Adds space between rows */
        width: 100%;
    }

        .table thead th {
            background-color: #2ecc71; /* Green header background */
            color: white; /* White text for headers */
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr {
            background-color: #f8f9fa; /* Light gray background for rows */
            transition: background-color 0.3s ease; /* Smooth hover effect */
            border-radius: 10px; /* Rounded corners for rows */
            overflow: hidden;
        }

            .table tbody tr:hover {
                background-color: #ffc107; /* Orange background on hover */
                color: white; /* White text on hover */
            }

        .table tbody td {
            border: none; /* Remove border */
            padding: 12px;
            text-align: center;
        }

        .table ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

            .table ul li {
                margin: 0;
                padding: 0;
                text-align: left;
            }

    .btn-success {
        background-color: #2ecc71; /* Green button */
        border-color: #2ecc71;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545; /* Red button */
        border-color: #dc3545;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #bd2130;
        }

    .btn-add {
        background-color: #ffc107; /* Orange button */
        border-color: #ffc107;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-add:hover {
            background-color: #e0a800; /* Darker orange on hover */
            border-color: #d39e00;
        }
</style>